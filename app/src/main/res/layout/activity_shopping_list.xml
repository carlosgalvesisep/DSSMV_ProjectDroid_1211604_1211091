<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ShoppingListActivity">


    <EditText
            android:id="@+id/ingredientNameSL"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="52dp"
            android:hint="Ingredient Name" android:layout_marginTop="1dp" android:layout_marginStart="20dp"/>
    <EditText
            android:id="@+id/ingredientQuantitySL"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="Ingredient Quantity" android:layout_marginTop="49dp" android:layout_marginStart="19dp"/>
    <ImageView
            android:id="@+id/button_insertSL"
            android:src="@drawable/add_ingredient"
            android:layout_width="46dp"
            android:layout_height="41dp"
            android:backgroundTint="@color/grey"
            android:layout_alignTop="@id/ingredientNameSL"
            android:layout_marginStart="65dp"
            android:layout_marginTop="32dp"
            android:layout_toEndOf="@id/ingredientNameSL"
            android:text="insert"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:background="@color/grey"/>


</RelativeLayout>