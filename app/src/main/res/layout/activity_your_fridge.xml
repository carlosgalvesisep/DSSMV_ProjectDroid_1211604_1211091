<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.whatcanicook.FridgeActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp"
            android:background="@color/grey"/>
    <EditText
            android:id="@+id/edit_ingredientName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="52dp"
            android:hint="Ingredient Name" />

    <EditText
            android:id="@+id/edit_ingredientQuantity"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:hint="Ingredient Quantity" />

    <Button
            android:id="@+id/button_insertSL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:layout_alignTop="@id/edit_ingredientName"
            android:layout_marginStart="13dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@id/edit_ingredientName"
            android:text="insert"/>

    <ImageView
            android:layout_marginLeft="150dp"
            android:background="@drawable/round_grey"
            android:layout_width="wrap_content"
            android:layout_height="46dp" android:id="@+id/searchByIngredient"
            android:src="@drawable/search"
            android:backgroundTint="@color/grey"
            android:layout_alignParentBottom="true"
            android:drawablePadding="10dp" android:layout_alignParentStart="true" android:layout_marginStart="287dp"
            android:layout_marginBottom="27dp"/>

</RelativeLayout>